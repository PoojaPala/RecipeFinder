<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MultiuAppLauncher">

        <Button
            android:id="@+id/button_launch_recipe_finder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Recipe Finder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/button_calculations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Calculations"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_launch_recipe_finder"
            android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>